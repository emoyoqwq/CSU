{
  "$id": "https://example.com/address.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "user",
  "description": "user object for POST request",
  "type": "object",
  "properties": {
    "nickname": {
      "description": "id should be a nickname",
      "type": "string",
      "pattern": "^.{3,30} ?"
    },
    "email": {
      "description": "email should be the users email",
      "type": "string",
      "pattern": "^.{3,30} ?"
    },
    "password_hash": {
      "description": "password_hash should be the users password hashed",
      "type": "string",
      "pattern": "^.{3,30} ?"
    },
    "requestType": {
      "description": "the object type should be user",
      "type": "string",
      "pattern": "^user$"
    }
  },
  "required":["nickname", "email", "password_hash", "requestType"],
  "additionalProperties": false
}
